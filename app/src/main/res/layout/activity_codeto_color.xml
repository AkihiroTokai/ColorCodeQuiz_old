<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.owner.colorcodequiz.CodetoColorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mode:CodetoColor"
        android:id="@+id/mode"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Progress:1/10"
        android:id="@+id/progress"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/questioncode"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:singleLine="true"
        android:text="questioncode" />

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_below="@+id/questioncode"
        android:layout_marginTop="99dp"
        android:id="@+id/frameLayout10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/check_select1"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/answer1"
            android:layout_gravity="center"
            android:onClick="select1" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/frameLayout10"
        android:layout_toEndOf="@+id/frameLayout10" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/check_select2"
            android:layout_gravity="left|top"
            android:cropToPadding="false" />

        <TextView
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/answer2"
            android:layout_gravity="center"
            android:onClick="select2" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/frameLayout11"
        android:layout_below="@+id/frameLayout10"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/answer3"
            android:layout_gravity="center"
            android:onClick="select3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/check_select3"
            android:layout_gravity="left|top" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/frameLayout12"
        android:layout_below="@+id/frameLayout10"
        android:layout_toEndOf="@+id/frameLayout10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/check_select4" />

        <TextView
            android:layout_width="89dp"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/answer4"
            android:layout_gravity="center"
            android:onClick="select4" />
    </FrameLayout>

</RelativeLayout>
