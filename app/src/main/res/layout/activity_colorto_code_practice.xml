<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RelativeLayout"
    android:focusable="true">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mode:Practice"
        android:id="@+id/mode"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="53dp"
        android:focusable="true"
        android:layout_below="@+id/tabs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Progress:1/10"
        android:id="@+id/progress"
        android:layout_marginLeft="41dp"
        android:layout_alignTop="@+id/mode"
        android:layout_toEndOf="@+id/mode" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select1"
        android:layout_alignStart="@+id/answer3"
        android:layout_above="@+id/frameLayout4"
        android:layout_alignEnd="@+id/answer3" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/check_select4"
        android:layout_toStartOf="@+id/check_select4"
        android:id="@+id/frameLayout4">

        <ImageView
            android:layout_width="148dp"
            android:layout_height="166dp"
            android:id="@+id/check_select3"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer3"
        android:onClick="select3"
        android:layout_alignTop="@+id/answer4"
        android:layout_alignStart="@+id/mode"
        android:layout_alignBottom="@+id/answer4"
        android:layout_alignEnd="@+id/mode" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/progress"
        android:layout_toEndOf="@+id/progress"
        android:id="@+id/frameLayout2">

    </FrameLayout>

    <ImageView
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:id="@+id/check_select4"
        android:layout_gravity="left|bottom"
        android:layout_alignBottom="@+id/frameLayout2"
        android:layout_alignStart="@+id/progress" />

    <Button
        android:layout_width="109dp"
        android:layout_height="60dp"
        android:id="@+id/answer4"
        android:singleLine="false"
        android:onClick="select4"
        android:clickable="true"

        android:layout_gravity="right|bottom"
        android:layout_marginBottom="60dp"
        android:layout_alignBottom="@+id/frameLayout2"
        android:layout_toStartOf="@+id/frameLayout2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select2"
        android:layout_alignEnd="@+id/answer4"
        android:layout_alignBottom="@+id/select1"
        android:layout_alignStart="@+id/answer4" />


</RelativeLayout>

