
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/RelativeLayout"
    android:focusable="true">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mode:Practice"
        android:id="@+id/mode"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="53dp"
        android:focusable="true"
        android:layout_below="@+id/tabs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Progress:1/10"
        android:id="@+id/progress"
        android:layout_marginLeft="41dp"
        android:layout_alignTop="@+id/mode"
        android:layout_toEndOf="@+id/mode" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignStart="@+id/progress" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/answer4"
        android:layout_alignTop="@+id/answer1"
        android:id="@+id/frameLayout2"
        android:layout_alignStart="@+id/frameLayout6"
        android:layout_toStartOf="@+id/answer2">

        <ImageView
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:id="@+id/check_select1"
            android:layout_gravity="left|top" />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#000000"
        android:id="@+id/answer1"
        android:layout_marginBottom="133dp"
        android:onClick="select1"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/progress" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/answer2"
        android:layout_toEndOf="@+id/frameLayout2"
        android:layout_above="@+id/answer4"
        android:id="@+id/frameLayout5" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/check_select2"
            android:layout_gravity="left|top" />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#00ffff"
        android:id="@+id/answer2"
        android:onClick="select2"
        android:layout_alignTop="@+id/answer1"
        android:layout_alignStart="@+id/answer4" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout6"
        android:layout_alignStart="@+id/mode"
        android:layout_below="@+id/frameLayout2"
        android:layout_toStartOf="@+id/answer4"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:id="@+id/check_select3"
            android:layout_gravity="center_horizontal|bottom" />
    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#ffffff"
        android:id="@+id/answer3"
        android:onClick="select3"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/answer2"
        android:layout_alignStart="@+id/answer1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout4"
        android:layout_below="@+id/frameLayout2"
        android:layout_toEndOf="@+id/frameLayout2"
        android:layout_alignBottom="@+id/frameLayout6">

        <ImageView
            android:layout_width="168dp"
            android:layout_height="87dp"
            android:id="@+id/check_select4"
            android:layout_gravity="right|bottom" />

    </FrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#ffff00"
        android:id="@+id/answer4"
        android:onClick="select4"
        android:layout_alignTop="@+id/answer3"
        android:layout_alignStart="@+id/progress" />


</RelativeLayout>